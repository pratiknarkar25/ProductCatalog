<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Inward date</th>
      <th>Type</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.inward_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<select onChange="window.location.href=this.value">
    <option>Please select</option>
    <option value="/products/new?type=Notebook">Notebook</option>
    <option value="/products/new?type=Pen">Pen</option>
</select>
